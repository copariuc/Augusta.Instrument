@article{Orgiles-2019,
  title = {Validation of the Short Version of the {{Cognitive Emotion Regulation Questionnaire}} for {{Spanish}} Children},
  author = {Orgil{\'e}s, Mireia and Morales, Alexandra and {Fern{\'a}ndez-Mart{\'i}nez}, Iv{\'a}n and Melero, Silvia and Espada, Jos{\'e} P},
