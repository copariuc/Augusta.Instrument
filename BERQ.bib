@article{Kraaij-2019,
  title = {The {{Behavioral Emotion Regulation Questionnaire}}: {{Development}}, Psychometric Properties and Relationships with Emotional Problems and the {{Cognitive Emotion Regulation Questionnaire}}},
  shorttitle = {The {{Behavioral Emotion Regulation Questionnaire}}},
  author = {Kraaij, Vivian and Garnefski, Nadia},
  year = {2019},
  month = jan,
  journal = {Personality and Individual Differences},
  volume = {137},
  pages = {56--61},
  issn = {0191-8869},
  doi = {10.1016/j.paid.2018.07.036},
  abstract = {A new questionnaire, the Behavioral Emotion Regulation Questionnaire (BERQ) was developed. This questionnaire consists of 5 scales and assesses one's behavioral style or strategies of responding to stressful events to regulate emotions. It is the first questionnaire that measures behavioral coping only and complements the Cognitive Emotion Regulation Questionnaire (CERQ) which measures cognitive coping. In a sample of 457 adults from the general population the psychometric properties of the BERQ (measuring dispositional coping) and its relationship with well-being and the CERQ were examined. Principal component analyses supported the allocation of items to the subscales, with alphas of all scales being high. All BERQ scales correlated significantly with symptoms of depression and anxiety. Higher use of Seeking Distraction, Actively Approaching and Seeking Social Support was related to fewer depression and anxiety symptoms, suggesting these are more adaptive strategies. Higher use of Withdrawal and Ignoring was related to more depression and anxiety symptoms, suggesting these are less adaptive strategies. The BERQ and CERQ scales were mainly small to moderately correlated with each other. The results suggest that it is important to pay attention to behavioral coping in the development of intervention programs for mental health problems.},
  langid = {english},
  keywords = {Coping,Emotion regulation,Mood,Questionnaire}
}

@article{Lovibond-1995,
  title = {The Structure of Negative Emotional States: {{Comparison}} of the {{Depression Anxiety Stress Scales}} ({{DASS}}) with the {{Beck Depression}} and {{Anxiety Inventories}}},
